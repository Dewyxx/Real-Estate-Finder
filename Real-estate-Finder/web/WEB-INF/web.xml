<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>Buyer</display-name>
        <web-resource-collection>
            <web-resource-name>Buyerpage</web-resource-name>
            <description/>
            <url-pattern>/Buyer.html</url-pattern>
            <url-pattern>/Searchingproperty.html</url-pattern>
            <url-pattern>/Viewingall.html</url-pattern>
            <url-pattern>/Viewingproperty.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Buyer</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Seller</display-name>
        <web-resource-collection>
            <web-resource-name>Sellerpage</web-resource-name>
            <description/>
            <url-pattern>/Seller.html</url-pattern>
            <url-pattern>/Addingproperty.html</url-pattern>
            <url-pattern>/Deleting.html</url-pattern>
            <url-pattern>/Searchingproperty.html</url-pattern>
            <url-pattern>/Viewingall.html</url-pattern>
            <url-pattern>/Viewingproperty.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Seller</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/LoggingIn.html</form-login-page>
            <form-error-page>/Error.html</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Seller</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Buyer</role-name>
    </security-role>
</web-app>
